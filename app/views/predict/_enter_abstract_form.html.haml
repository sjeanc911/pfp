.enter_abstract_form

  = form_tag(abstracts_path, {:multipart => true, :method => "post", :target => "temp_frame"}) do

    = label_tag :abstract_label, "Abstract : "
    = text_area_tag "abstract[content]"

    = submit_tag "Predict >>"
    = link_to "Cancel", "#", :id => "cancel_predict_abstract"

  %iframe{:id => "temp_frame", :name => "temp_frame", :style => "display: none;"}
